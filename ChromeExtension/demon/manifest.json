{
    "name": "Getting Started Example", // extension name
    "description": "Build an Extension!",
    "version": "0.1", // 套件版本號
    "manifest_version": 3, // 固定為版本3
    "background": 
    {
        "service_worker": "background.js"  // 背景js
    },
    "icons": 
    {
        "128": "img/yellow-bird-128.png"          // 安裝的icon，至少要有個128*128，可以用png，完整的話16 32 48 128都放
    },  
    "action": 
    {
        "default_popup": "popup.html",
        "default_icon": {
            "128":"img/rss-icon.png"}     // 瀏覽器上小圖示的icon
    },
    // "options_page": "options.html",
    "permissions": [                     // 這個插件需要的權限，api需要"storage"
    "tabs","storage","activeTab","scripting"                            // 操作分頁的權限
    ]
}
    
